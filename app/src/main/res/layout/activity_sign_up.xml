<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".SignUp">

    <!-- Icon Placeholder (Simple TextView, instead of complex SVG/Icon) -->
    <TextView
        android:id="@+id/tvR"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:text="R"
        android:textColor="#3F51B5"
        android:textSize="32sp" />

    <!-- Header Text: Create Your Account -->
    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#000000" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvChitChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="30dp"
        android:text="Find your next home and the people to share it with."
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <!-- Full Name Label -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Full Name"
        android:textColor="#000000"
        android:textSize="14sp" />

    <!-- Full Name Input Field -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your full name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Nested LinearLayout for Age and City side-by-side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- Age Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Age"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="25"
                android:inputType="number"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <!-- City Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:hint="e.g. Jerusalem"
                android:inputType="text"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/etEmail1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Password Label -->
    <TextView
        android:id="@+id/tvPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/etPassword1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:layout_marginTop="4dp"/>

    <!-- Spacer View (Pushes remaining content to the bottom) -->

    <!-- Continue Button -->

    <!-- Already have an account? Sign In Link -->

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#E88873"
        android:minHeight="56dp"
        android:text="Continue"
        android:textColor="#3949AB"
        android:textColorLink="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvAlreadyHaveAnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Sign In"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>