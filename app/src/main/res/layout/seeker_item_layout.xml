<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_android_black_24dp"
                android:contentDescription="profile_image"
                tools:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1.5dp" />

            <!-- Name and Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="sample_full_name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    tools:text="Remas" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/type_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="student"
                    android:textColor="#00C853"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    tools:text="STUDENT" />
            </LinearLayout>

            <!-- Chat Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="start_chat"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_dialog_email"
                android:tint="#4CAF50"
                app:backgroundTint="@color/white"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:maxImageSize="24dp"
                tools:ignore="ContentDescription,TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Info Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Age Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FAFAFA"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_month"
                        app:tint="#757575"
                        android:contentDescription="age" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="age"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        tools:text="Age" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- City Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FAFAFA"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        app:tint="#757575"
                        android:contentDescription="city" />

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxWidth="120dp"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Haifa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="city"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        tools:text="Location" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Budget Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#EEEEEE"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#00C853"
                    android:contentDescription="budget" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tvBudget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="$1,000 - $1,500" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="budget"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        tools:text="per month" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preferences Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="4dp"
            android:text="preferences"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Preferences" />

        <!-- Preferences Chips Container -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/preferencesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                app:singleLine="true"
                app:singleSelection="false">

                <!-- Sample Chips (will be added programmatically) -->
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="preferences"
                    android:textColor="#00C853"
                    app:chipBackgroundColor="#E8F5E9"
                    app:chipMinHeight="32dp"
                    app:chipStrokeColor="#00C853"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="#B2DFDB"
                    tools:text="Quiet" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartChat"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:text="start chat"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="#00C853"
            app:cornerRadius="24dp"
            app:icon="@android:drawable/ic_dialog_email"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:rippleColor="#00BFA5" />
    </LinearLayout>
</androidx.cardview.widget.CardView>