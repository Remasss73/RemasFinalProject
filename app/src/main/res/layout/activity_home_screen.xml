<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f6f6"
    tools:context=".HomeActivity">

    <!-- 1. Top Header Bar (Fixed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- App Title/Logo Placeholder -->
        <TextView
            android:id="@+id/tvRumi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Rumi"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Spacer to push filter icon to the right -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Filter Icon Placeholder -->
        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:padding="8dp"
            android:text="Filter"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 2. Main Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"> <!-- This ensures the ScrollView fills the space and pushes the nav bar down -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Content Card Placeholder 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp">

                <!-- Image Placeholder -->

                <!-- Price and Title -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="12dp"
                    android:background="#CCCCCC"
                    android:contentDescription="Room image placeholder" />

                <TextView
                    android:id="@+id/tvRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₪1,850/mo"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Location -->
                <TextView
                    android:id="@+id/tvCity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel Aviv"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Content Card Placeholder 2 (to show scrolling) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#CCCCCC"
                    android:contentDescription="Room image placeholder 2"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvRent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₪1,600/mo"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Natanya"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 3. Bottom Navigation Bar (Fixed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@android:color/white">

        <!-- Nav Item 1: Home (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#3F51B5"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Nav Item 2: Matches -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matches"
                android:textColor="#3F51B5"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Nav Item 3: Add -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="#3F51B5"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Nav Item 4: Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#3F51B5"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>